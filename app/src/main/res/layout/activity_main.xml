<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="csci4020.shawnbickel_judsonthomas.assignment3.thedrawingapp.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:id="@+id/drawingBrush"
            app:srcCompat="@drawable/brush"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:id="@+id/lineThickness"
            app:srcCompat="@drawable/black_line"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />


        <ImageView
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:id="@+id/newImage"
            app:srcCompat="@drawable/new_image"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />


        <ImageView
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            app:srcCompat="@drawable/t"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:id="@+id/rectangle"
            app:srcCompat="@drawable/rectangle"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:id="@+id/roundedRect"
            app:srcCompat="@drawable/rounded_rect"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:id="@+id/circle"
            app:srcCompat="@drawable/circle"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:id="@+id/saveToGallery"
            app:srcCompat="@drawable/gallery"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:id="@+id/erase"
            app:srcCompat="@drawable/eraser"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />

    </LinearLayout>
    
    <csci4020.shawnbickel_judsonthomas.assignment3.thedrawingapp.UserDrawingEngine
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_weight="1"/>


</LinearLayout>
