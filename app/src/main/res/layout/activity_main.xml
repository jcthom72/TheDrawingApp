<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="csci4020.shawnbickel_judsonthomas.assignment3.thedrawingapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:weightSum="8">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@color/black_de"
            android:id="@+id/freeLine"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vertical_line"
            app:srcCompat="@drawable/v_line"
            android:paddingLeft="2dp"
            android:paddingTop="4dp"
            android:background="#ffffff"
            android:layout_weight="1" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lineWidth"
            android:background="@drawable/free_style"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp"
            android:spinnerMode="dialog">

        </Spinner>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lineColor"
            app:srcCompat="@drawable/line_color"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rectangle"
            app:srcCompat="@drawable/rectangle"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/circle"
            app:srcCompat="@drawable/circle"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            app:srcCompat="@drawable/t"
            android:paddingLeft="2dp"
            android:paddingTop="4dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/background_color"
            app:srcCompat="@drawable/background_color"
            android:paddingLeft="2dp"
            android:paddingTop="4dp"
            android:background="#ffffff"
            android:layout_weight="1" />

    </LinearLayout>

    <csci4020.shawnbickel_judsonthomas.assignment3.thedrawingapp.UserDrawingEngine
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_weight="1"
        android:id="@+id/drawingLayout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:weightSum="5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newImage"
            app:srcCompat="@drawable/new_image"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveToFile"
            app:srcCompat="@drawable/gallery"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/erase"
            app:srcCompat="@drawable/eraser"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="4dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/undo"
            app:srcCompat="@drawable/undo"
            android:paddingLeft="2dp"
            android:paddingTop="4dp"
            android:background="#ffffff"
            android:paddingBottom="4dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/redo"
            app:srcCompat="@drawable/redo"
            android:paddingLeft="2dp"
            android:paddingTop="4dp"
            android:background="#ffffff"
            android:paddingBottom="4dp"
            android:layout_weight="1" />

    </LinearLayout>


</LinearLayout>
